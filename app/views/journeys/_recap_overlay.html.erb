

<div class="card-all-total-time_overlay" data-controller="directions">
  <h3>Mon parcours</h3>
  <div id="journey" data-travel-mode="<%= @journey.travel_mode %>"></div>

  <span class="emoji_overlay">🕐</span><h3><%= @total_places_duration %> min</h3>
</div>

<% @places.each_with_index do |place, index| %>
  <div class="journey-step">
    <div class="journey-dot"></div>
    <%= svg_tag "curl", class: 'line-curl' %>
    <div class="emoji-time-journey">
      <div class="emoji-image-container">
        <div class="emoji-journey">
          <%= @journey.travel_emoji %>
        </div>
      </div>
      <% if place == @places.first || place == @places.last %>
        <span><%= GeolocService.new.get_duration([45.76950039018254, 4.834805615523664], [place.lat, place.long], @journey.travel_mode).round(0) %>min</span>
      <% else %>
        <span><%= GeolocService.new.get_duration([@places[index - 1].lat, @places[index - 1].long], [place.lat, place.long], @journey.travel_mode).round(0) %>min</span>
      <% end %>
    </div>

    <div class="card-journey">
      <div class="card-journey-details">
        <%= image_tag place.illustration, class: "image_journey" %>
        <h3><%= place.name %></h3>
        <div><span class="emoji">🕐</span><%= place.visit_duration %> min</div>
        <%= link_to "Détails de l'activité", journey_place_path(@journey, place), class: "salmon-button details-place-button" %>
        <div class="d-flex justify-content-center w-100">
          <%= link_to "Supprimer", root_path, class: "delete-button" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
