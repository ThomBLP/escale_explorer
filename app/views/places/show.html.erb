
<div>
  <button onclick="journey_places_path">Retour</button>
</div>

<div class="container">
    <div class="image-details">
    <%= image_tag @place.illustration, class: 'image_places_show' %>
    </div>
    <div>
      <h1 class='title_principal_show'><%= @place.name %></h1>
    </div>

      <div class="stylecategory">
        <%= @place.visit_duration %>min
      </div>
    <div>

      <div class="details-title-and-description">
        <h3 class="title_secondaire"></h3>
        <p><%= @place.shortdescription %></p>
      </div>

      <div>
        <div>
          <p>Trajet: 35 min</p>
          <p>Visite: <%= @place.visit_duration %> min</p>
        </div>
        <div>
          <p>Horaires: <%= @place.opening %></p>
          <p>Commentaires: 4/5</p>
          <%#= button_to "Ajouter", journey_visits_path(@journey ) %>
        </div>
      </div>

      <%= link_to @place.website, class: "salmon-button", target: "_blank" do %>
        🌐 Site internet
      <% end %>

      <%= link_to @place.mail, class: "salmon-button", target: "_blank" do %>
        📞 Contact
      <% end %>
    </div>
  </div>

  <a href="https://www.lyon.fr/lieu/antiquite/amphitheatre-romain-des-trois-gaules">
    <button>Site</button>
  </a>

  <button>Contact</button>

</div>

<%= @place.name %>
<br>

<% @place.reviews.each do |review| %>
<br>
<%= review.user.nickname %>
<br>
<%= review.comment %>
<br>
<%= review.rating %>
<br>


<% end %>
<br>
