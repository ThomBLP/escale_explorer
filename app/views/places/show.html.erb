<div class="container places-margin-bottom">
  <div class=card_place>
    <div class="image-container">
      <% if params[:redirect_from_journey] %>
        <%= link_to journey_path(@journey, category_ids: params[:category_ids], weather_icon: params[:weather_icon]), class: "add_link" do %>
            <p>retour</p>
          <% end %>
      <% else %>
        <%= link_to journey_places_path(@journey, category_ids: params[:category_ids]), class: "add_link" do %>
          <p>retour</p>
        <% end %>
      <% end %>

      <%= image_tag @place.illustration, class: 'image_places_show' %>
      <% unless @journey.places.include?(@place) %>
        <%= link_to journey_visits_path(@journey, place_id: @place, category_ids: params[:category_ids]), data: { turbo_method: :post } , class: "add_link" do%>
        <i class="fas fa-plus card-place-add-button"></i>
        <% end %>
      <% end %>
    </div>

    <div class="card_show-small_card_place">
      <div>
        <h1 class='title_principal_show'><%= @place.name %></h1>
      </div>
      <div class="card_show-stylecategory">
      <div>
        <p class="description"><span class="emoji">🕐</span><%= @place.visit_duration %>min</p>
        <p class="description"><span class="emoji"><%= @journey.travel_emoji %></span><%= @place.travel_time(@journey) %>min</p>
      </div>
      <div>
        <%= link_to '🍽', nearby_restaurants_journey_place_path(@journey, @place , category_ids: params[:category_ids]), style: "font-size: 30px;" %>
        <%= link_to '🍷', nearby_bars_journey_place_path(@journey, @place, category_ids: params[:category_ids]), style: "font-size: 30px;" %>
      </div>
      </div>
      <div>
        <% if @place.reviews.any? %>
          <% Review::AUTHORIZED_RATINGS.each do |number| %>
            <i class="fa<%= (number > @place.reviews.sum(:rating) / @place.reviews.count) ? 'r' : 's' %> fa-star"></i>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= link_to @place.website, class: "", target: "_blank" do %>
        🌐 Site internet
        <% end %>
        <%= link_to @place.mail, class: "", target: "_blank" do %>
        📞 Contact
        <% end %>
        <p>Horaires: <%= @place.opening %></p>
      </div>
    </div>
  </div>
</div>
