<div class="container-nearby-places">
  <div class="nearby-places-cards">
      <% nearby_places.each do |nearby_place| %>
        <div class="nearby-places-card">
          <div>
            <h5 class="mb-3"><%= nearby_place.name %></h5>
            <%= link_to "Appeler", "tel:#{nearby_place.tel}", class: "action-button" %>
            <%= link_to "Site web", nearby_place.website, class: "action-button", target: "_blank" %>
            <div class="add-button-container">
              <%= button_to "Ajouter", journey_visits_path(@journey, place_id: @place, category_ids: params[:category_ids]), class: "action-button mt-3" %>
            </div>
          </div>
          <%= link_to journey_place_path(@journey, place, category_ids: params[:category_ids]) do %>
            <%= image_tag nearby_place.illustration, class: "image-nearby-places" %>
          <% end %>
        </div>
      <% end %>
  </div>

  <div id="map" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-monument-marker-value="<%= @monument_marker.to_json %>"></div>


</div>
