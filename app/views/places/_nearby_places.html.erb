<div class="container-nearby-places">
  <div class="nearby-places-cards">
    <% nearby_places.each do |nearby_place| %>
      <div class="nearby-places-card">
      <div  class="mt-1 mb-1">
        <div  class="mt-1 mb-1">
          <h3 class="title-nearby-places"><%= nearby_place.name %></h3>
        </div>
          <div class="mt-1 mb-1" style="display: flex">
            <div class="icon-container orange">
              <%= link_to "" , class: "back-button", target: "_blank" do%>
              <i class="fa-solid fa-phone"></i>
              <%end %>
            </div>
            <div class="icon-container orange">
              <%= link_to "" , class: "back-button", target: "_blank" do%>

              <i class="fa-brands fa-internet-explorer"></i>
            <%end %>

            </div>
            <div class="icon-container orange">
              <%= link_to journey_visits_path(@journey, place_id: @place, category_ids: params[:category_ids]), class: "back-button" do %>
              <i class="fa-solid fa-plus"></i>
              <%end %></div>

          </div>
          <%= link_to journey_visits_path(@journey, place_id: @place, category_ids: params[:category_ids]), class: "back-button" do %>
            <i class="fa-solid fa-plus"></i>
          <%end %>
        <%= link_to journey_place_path(@journey, place, category_ids: params[:category_ids]) do %>
          <%= image_tag nearby_place.illustration, class: "image-nearby-places" %>
        <% end %>

      </div>
    <% end %>
  </div>
  <div id="map" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-monument-marker-value="<%= @monument_marker.to_json %>">
  </div>
</div>
