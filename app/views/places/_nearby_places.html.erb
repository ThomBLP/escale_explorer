<%# <div class="container-nearby-places"> %>
    <% nearby_places.each do |nearby_place| %>
      <div class="nearby-places-card">
      <div  class="nearby-places-card-left">
        <div  class="mt-1 mb-1">
          <p class="title-nearby-places"><%= nearby_place.name %></p>
        </div>
          <div class="mt-1 mb-1" style="display: flex">
            <%= link_to "tel:#{nearby_place.tel.delete(' ')}", class: "nearby icon-container white me-3", target: "_blank" do%>
              <i class="fa-solid fa-phone"></i>
            <%end %>
            <%= link_to "", class: "nearby icon-container white me-3", target: "_blank" do%>
              <i class="fa-solid fa-globe"></i>
            <%end %>
            <%= link_to journey_visits_path(@journey, place_id: @place, category_ids: params[:category_ids]), class: "nearby icon-container orange " do %>
              <i class="fa-solid fa-plus"></i>
            <%end %>
          </div>
        </div>
        <%= link_to journey_place_path(@journey, place, category_ids: params[:category_ids]) do %>
          <%= image_tag nearby_place.illustration, class: "image-nearby-places" %>
        <% end %>

      </div>
    <% end %>

</div>
