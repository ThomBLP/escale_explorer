<% @places.each do |place| %>
  <div class="card_places">
  <a href="https://ibb.co/hgMFwZk"><img src="https://i.ibb.co/hgMFwZk/lyon.jpg" alt="lyon" border="0" class="image_places"></a>
    <h3 class='title_principal'><%= place.name %></h3>
      <div class="stylecategory">
        <h3 class="title_secondaire emoji"><%= Category::EMOJI_CATEGORIES[place.category.name] %></h3>
        <h3> <%= display_name(place.category.name) %> </h3>
      </div>
    <p class="description">Temps d'activit√© : <%= place.visit_duration %>mn</p>
    <% if @latitude && @longitude %>
      <p class="description">Temps de trajet : <%= (GeolocService.new.get_duration([@latitude, @longitude], [place.lat, place.long], 'walking')).round(0) %>mn</p>
    <% end %>
  </div>
<% end %>
