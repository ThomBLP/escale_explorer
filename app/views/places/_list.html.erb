<% @places.each do |place| %>
  <div class="card_place">
    <%= link_to place_path(place), class: "card_place" do %>
      <% if place.illustration.present? %>
        <%= image_tag place.illustration, class: 'image_places' %>
      <% end %>
      <h2 class='title_principal_list'><%= place.name %> - <%= place.category.name %> </h2>
        <p class="description">🎨<%= place.visit_duration %>min</p>
        <p class="description">🚶<%= (GeolocService.new.get_duration([@latitude, @longitude], [place.lat, place.long], 'walking')).round(0) %>min</p>
      <% if @latitude && @longitude %>
      <% end %>
    <% end %>
  </div>
<% end %>
