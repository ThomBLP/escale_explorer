      <%= image_tag place.illustration, class: 'image_places' %>
    <% end %>
    <% end %>
    <div>
      <h3 class='title_principal_list'><%= place.name %> - <%= place.category.name %> </h3>
        <div class="d-flex">
        <% if place.reviews.any? %>
