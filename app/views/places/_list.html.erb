<% @places.each do |place| %>
  <div class="card_place">
    <%= link_to journey_place_path(@journey, place), class: "card_place" do %>
    <% if place.illustration.present? %>
      <%= image_tag place.illustration, class: 'image_places' %>
    <% end %>
    <% end %>
    <%= button_to "Ajouter", journey_visits_path(@journey, place_id: place, category_ids: params[:category_ids]) %>
      <h2 class='title_principal_list'><%= place.name %> - <%= place.category.name %> </h2>
        <p class="description">🎨<%= place.visit_duration %>min</p>
        <p class="description">🚶<%= place.travel_duration %>min</p>

  </div>
<% end %>
